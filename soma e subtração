#include <iostream>

int main()
{
    std :: cout << "Escreva o primeiro número: ";
    int num1{};
    std :: cin >> num1;

    std :: cout << "Escreva o segundo número: ";
    int num2{};
    std :: cin >> num2;
    
    std :: cout << "A soma do número " << num1 << " com o número " << num2 << " é: " << num1 + num2 << '\n';
    std :: cout << "A subtração do número " << num1 << " com o número " << num2 << " é: " << num1 - num2 << '\n';
    
    return 0;
}

