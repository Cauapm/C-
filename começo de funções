#include <iostream>

int valor()
{
    std :: cout <<"Escreva um numero inteiro: ";
    int input{};
    std :: cin >> input;
    
    return input;
}

int main()
{
    int num{ valor() };
    std :: cout << " O dobro do número " << num << " é: " << num * 2 << '\n';
    
    return 0;
}

