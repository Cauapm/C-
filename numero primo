#include <iostream>

bool numero_primo(int x)
{
    if (x == 2)
        return true;
        
    else if (x == 3)
        return true;
        
    else if (x == 5)
        return true;
    
    else if (x == 7)
        return true;
    
    return false;
}

int main()
{
    std :: cout << "Digite um número de 1 a 9: ";
    int x{};
    std :: cin >> x;
    
    if(numero_primo(x))
        std :: cout <<"O número escolhido é primo";
    else
        std :: cout <<"O número escolhido não é primo";
        
    return 0;
}

